{
  "name": "do-not-stop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:frontend": "pnpm --prefix frontend dev",
    "dev:backend": "pnpm --prefix backend dev",
    "dev:full": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:contracts": "npx hardhat node",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "build:frontend": "pnpm --prefix frontend build",
    "build:backend": "pnpm --prefix backend build"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.1",
    "@openzeppelin/contracts": "^5.4.0",
    "chai": "^4.4.1",
    "concurrently": "^8.2.2",
    "hardhat": "^3.0.6"
  }
}